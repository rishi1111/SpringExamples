<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- spring by default follows singleton scope we can use (prototype) and factory method to implement our own singleton factory -->
<bean id="provider" class="ex3.ResourceProvider" factory-method="getProvider" scope="prototype"></bean>


</beans>
